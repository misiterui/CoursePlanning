<?xml version="1.0" encoding="utf-8"?>

<!-- Applying rounded corners to a Linear Layout, from Siddharth Lele -->
<!-- https://stackovewarprflow.com/questions/10074249/how-to-apply-corner-radius-to-linearlayout -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@color/yellow" />

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <corners android:radius="12dp" />

</shape>